// tasks.json defines quick commands that can be launched in Visual Studio Code
// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "options": {
        "env": {
            "DEBUG_SHIM_HOST": "app-healthcheck",
            "APP_WORKING_DIR": "/workspace/app-healthcheck"
        }
    },
    "tasks": [
        {
            "label": "deploy-debugshim-dotnet",
            "isBackground": false,
            "command": "/bin/bash",
            "type": "shell",
            "dependsOn": [
                "build-dotnet"
            ],
            "dependsOrder": "sequence",
            "args": [
                "/spacefx-dev/debugShim-deploy.sh",
                "--debug_shim",
                "${DEBUG_SHIM_CLIENT}",
                "--disable_plugin_configs",
                "--python_file",
                "${workspaceFolder}/python_app/main.py",
                "--port",
                "5678",
                "--disable_plugin_configs"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "build-dotnet",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/dotnet_app/app-healthcheck.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-debugshim-python",
            "isBackground": false,
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "/spacefx-dev/debugShim-deploy.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--python_file",
                "${workspaceFolder}/python_app/main.py",
                "--port",
                "5678"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "reset-debugshim",
            "isBackground": true,
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "/spacefx-dev/debugShim-reset.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--skip-pod-wait"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}